<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Emergency theme -->
    <style name="EmergencyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/emergencyBackground</item>
        <item name="colorPrimaryDark">@color/emergencyBackground</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/emergencyBackground</item>
    </style>
</resources>