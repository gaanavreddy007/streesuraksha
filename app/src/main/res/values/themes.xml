<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Emergency theme -->
    <style name="EmergencyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/emergencyBackground</item>
        <item name="colorPrimaryDark">@color/emergencyBackground</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/emergencyBackground</item>
    </style>

    <!-- Fake call theme -->
    <style name="FakeCallTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>