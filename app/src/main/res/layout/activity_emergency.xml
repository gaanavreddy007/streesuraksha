<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:padding="16dp"
    tools:context=".activities.EmergencyActivity">

    <TextView
        android:id="@+id/emergencyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="EMERGENCY MODE ACTIVE"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/locationStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergencyTitle"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Sharing your location with emergency contacts..."
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/smsStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationStatus"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="SMS alerts sent"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/deactivateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/smsStatus"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/white"
        android:onClick="showPasswordDialog"
        android:padding="16dp"
        android:text="DEACTIVATE EMERGENCY MODE"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Enter password to deactivate emergency mode"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>